@model bug_tracker.Models.ProjectCreateViewModel

@{
    ViewBag.Title = "Create";
}

                <div class="card card-inverse">
                    <div class="card-header">
                        <div class="card-title">Create A New Project</div>
                    </div>
                    <div class="card-block">
                        @using (Html.BeginForm())
                        {
                            @Html.AntiForgeryToken()
                        <div class="form-group row">
                            <div class="col-md-9">
                                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                @Html.LabelFor(model => model.Name, htmlAttributes: new { @class = "control-label" })
                                @Html.TextBoxFor(model => model.Name, htmlAttributes: new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
                            </div>
                            <div class="col-md-3">
                            </div>
                        </div>
                        <div class="form-group row">
                            <div class="col-md-9">
                                <p>Select A Project Manager</p>
                                @Html.DropDownListFor(model => model.ProjectManagerId, null, htmlAttributes: new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.ProjectManagerId, "", new { @class = "text-danger" })
                            </div>
                            <div class="col-md-3">
                            </div>
                        </div>
                            <div class="form-group">
                                <div class="col-md-offset-2 col-md-10">
                                    <input type="submit" value="Create" class="btn btn-info btn-md" />
                                </div>
                            </div>
                            }
                        </div>
                </div>
            @*<div>
                @Html.ActionLink("Back to List", "Index")
            </div>*@

            @section Scripts {
                @Scripts.Render("~/bundles/jqueryval")
            }
